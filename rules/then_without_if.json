{
  "title": "`then` without `if` is ignored",
  "description": "`then` has effect only when paired with `if`. Without `if` it can be removed.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "then": {
          "required": [ "foo" ]
        }
      },
      "doc": true
    }
  ],
  "autofixable": true,
  "categories": [ "correctness" ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: then present without if",
      "description": "`then` alone has no effect; remove it or add a matching `if`.",
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "then": {
          "required": [ "foo" ]
        }
      }
    },
    {
      "title": "Right: Valid conditional with if/then",
      "description": "A `then` branch is valid when paired with `if`.",
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "if": {
          "properties": {
            "role": {
              "const": "admin"
            }
          }
        },
        "then": {
          "required": [ "permissions" ]
        }
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "if": {
          "properties": {
            "role": {
              "const": "admin"
            }
          }
        },
        "then": {
          "required": [ "permissions" ]
        }
      }
    }
  ],
  "dialects": {
    "2019-09": [ "then" ],
    "2020-12": [ "then" ],
    "draft7": [ "then" ]
  },
  "message": "Remove `then` because there is no matching `if`.",
  "references": [
    "https://json-schema.org/draft/2020-12/json-schema-core.html#name-conditionals"
  ]
}
