{
  "title": "Binary `contentMediaType` should pair with `contentEncoding`",
  "description": "When a schema specifies a binary media type (like images), it should also specify how the binary data is encoded as a string.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string",
        "contentEncoding": "base64",
        "contentMediaType": "image/png"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string",
        "contentMediaType": "image/png"
      },
      "doc": true
    },
    {
      "after": {
        "type": "string",
        "contentEncoding": "base64",
        "contentMediaType": "application/pdf"
      },
      "before": {
        "type": "string",
        "contentMediaType": "application/pdf"
      }
    }
  ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: Binary media type without encoding",
      "description": "When using binary media types, specify how the string is encoded.",
      "before": { "type": "string", "contentMediaType": "image/png" },
      "after": { "type": "string", "contentMediaType": "image/png", "contentEncoding": "base64" }
    },
    {
      "title": "Right: contentMediaType with encoding",
      "description": "Pairing both gives consumers enough information to decode payloads.",
      "before": { "type": "string", "contentMediaType": "application/pdf", "contentEncoding": "base64" },
      "after": { "type": "string", "contentMediaType": "application/pdf", "contentEncoding": "base64" }
    }
  ],
  "autofixable": true,
  "categories": [ "readability", "style" ],
  "dialects": {
    "2019-09": [ "contentMediaType", "contentEncoding" ],
    "2020-12": [ "contentMediaType", "contentEncoding" ],
    "draft7": [ "contentMediaType", "contentEncoding" ]
  },
  "message": "Add `contentEncoding` or remove `contentMediaType`.",
  "references": [
    "https://json-schema.org/draft/2020-12/json-schema-validation.html#name-contentencoding",
    "https://json-schema.org/draft/2020-12/json-schema-validation.html#name-contentmediatype"
  ]
}
