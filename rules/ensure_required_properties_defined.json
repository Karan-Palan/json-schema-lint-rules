{
  "title": "`required` names must be declared or matched by a pattern",
  "description": "Every entry in `required` must correspond to a key in `properties` or match at least one regex in `patternProperties`.",
  "examples": [
    {
      "after": {
        "type": "object",
        "required": [ "a", "b" ],
        "patternProperties": {
          "^a|b$": {
            "type": "string"
          }
        }
      },
      "before": {
        "type": "object",
        "required": [ "a", "b", "c" ],
        "patternProperties": {
          "^a|b$": {
            "type": "string"
          }
        }
      },
      "doc": true
    }
  ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: Required references missing property",
      "description": "Names in `required` must exist in properties or match a pattern.",
      "before": {
        "type": "object",
        "required": ["a","b","c"],
        "properties": { "a": {"type":"string"}, "b": {"type":"string"} }
      },
      "after": {
        "type": "object",
        "required": ["a","b"],
        "properties": { "a": {"type":"string"}, "b": {"type":"string"} }
      }
    },
    {
      "title": "Wrong: Required satisfied via patternProperties",
      "description": "If using patternProperties, ensure required names match at least one regex or remove them.",
      "before": {
        "type": "object",
        "required": ["alpha","beta"],
        "patternProperties": { "^alp": {"type":"string"} }
      },
      "after": {
        "type": "object",
        "required": ["alpha"],
        "patternProperties": { "^alp": {"type":"string"} }
      }
    },
    {
      "title": "Right: All required keys declared",
      "description": "Valid when each required is declared or matched by a pattern.",
      "before": {
        "type": "object",
        "required": ["id","name"],
        "properties": { "id": {"type":"integer"}, "name": {"type":"string"} }
      },
      "after": {
        "type": "object",
        "required": ["id","name"],
        "properties": { "id": {"type":"integer"}, "name": {"type":"string"} }
      }
    }
  ],
  "autofixable": true,
  "categories": [ "correctness" ],
  "dialects": {
    "2019-09": [ "required", "properties", "patternProperties" ],
    "2020-12": [ "required", "properties", "patternProperties" ],
    "draft4": [ "required", "properties", "patternProperties" ],
    "draft6": [ "required", "properties", "patternProperties" ],
    "draft7": [ "required", "properties", "patternProperties" ]
  },
  "message": "Remove unknown names, declare them, or add a matching pattern.",
  "references": [
    "https://json-schema.org/understanding-json-schema/reference/object.html#required-properties",
    "https://json-schema.org/understanding-json-schema/reference/object.html#pattern-properties"
  ]
}
