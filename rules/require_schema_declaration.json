{
  "title": "Require $schema at the document root",
  "description": "Every JSON Schema should declare its dialect with a top-level `$schema` keyword to avoid ambiguous interpretation.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "before": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "doc": true
    },
    {
      "before": {
        "$id": "https://example.com/thing",
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      }
    }
  ],
  "autofixable": true,
  "categories": [ "correctness" ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: Missing $schema at root",
      "description": "Always declare the dialect via $schema to avoid ambiguity.",
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "before": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    },
    {
      "title": "Right: $schema declared",
      "description": "Declaring the metaschema is correct and recommended.",
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object"
      }
    }
  ],
  "dialects": {
    "2019-09": [ "$schema" ],
    "2020-12": [ "$schema" ],
    "draft4": [ "$schema" ],
    "draft6": [ "$schema" ],
    "draft7": [ "$schema" ]
  },
  "message": "Add a `$schema` property pointing to the draft URI.",
  "references": [ "https://json-schema.org/specification" ]
}
