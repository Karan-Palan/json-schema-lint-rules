{
  "title": "`format` must match declared `type`",
  "description": "`format` applies only to string instances. Using it with another `type` is invalid.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string",
        "format": "uuid"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "integer",
        "format": "uuid"
      },
      "doc": true
    },
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string",
        "format": "email"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": [ "integer", "boolean" ],
        "format": "email"
      },
      "doc": true
    }
  ],
  "autofixable": false,
  "categories": [ "correctness" ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: format on non-string type",
      "description": "`format` only applies to strings; using it on integer is invalid.",
      "after": {
        "type": "string",
        "format": "uuid"
      },
      "before": {
        "type": "integer",
        "format": "uuid"
      }
    },
    {
      "title": "Wrong: format with mixed non-string types",
      "description": "If `format` is present, ensure `type` is or includes `string`.",
      "after": {
        "type": [ "string" ],
        "format": "email"
      },
      "before": {
        "type": [ "integer", "boolean" ],
        "format": "email"
      }
    },
    {
      "title": "Right: String union with format",
      "description": "It is fine to allow string among other types as long as format targets the string branch.",
      "after": {
        "type": [ "string", "null" ],
        "format": "date-time"
      },
      "before": {
        "type": [ "string", "null" ],
        "format": "date-time"
      }
    }
  ],
  "dialects": {
    "2019-09": [ "type", "format" ],
    "2020-12": [ "type", "format" ],
    "draft7": [ "type", "format" ]
  },
  "message": "Remove `format` or set `type` to `\"string\"`.",
  "references": [
    "https://json-schema.org/draft/2020-12/json-schema-validation.html#name-format"
  ]
}
