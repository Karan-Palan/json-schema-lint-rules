{
  "title": "Do not use $defs before draft-2019-09",
  "description": "$defs was introduced in draft-2019-09. For draft-04/06/07 use the legacy `definitions` keyword instead.",
  "examples": [
    {
      "after": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "$ref": "#/definitions/uuid",
        "definitions": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "before": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "$ref": "#/$defs/uuid",
        "$defs": {
          "uuid": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "doc": true
    }
  ],
  "comprehensiveExamples": [
    {
      "title": "Wrong (draft-07): Using $defs before 2019-09",
      "description": "$defs is not available in draft-07; use definitions instead.",
      "before": { "$schema": "http://json-schema.org/draft-07/schema#", "$ref": "#/$defs/uuid", "$defs": { "uuid": { "type": "string", "format": "uuid" } } },
      "after": { "$schema": "http://json-schema.org/draft-07/schema#", "$ref": "#/definitions/uuid", "definitions": { "uuid": { "type": "string", "format": "uuid" } } }
    },
    {
      "title": "Right (draft-2020-12): Use $defs",
      "description": "In modern drafts, $defs is the correct container for reusable subschemas.",
      "before": { "$schema": "https://json-schema.org/draft/2020-12/schema", "$defs": { "id": { "type": "integer" } } },
      "after": { "$schema": "https://json-schema.org/draft/2020-12/schema", "$defs": { "id": { "type": "integer" } } }
    }
  ],
  "autofixable": true,
  "categories": [ "correctness", "readability" ],
  "dialects": {
    "draft4": [ "$defs" ],
    "draft6": [ "$defs" ],
    "draft7": [ "$defs" ]
  },
  "message": "Replace `$defs` with `definitions`, and update any `$ref`s that target it.",
  "references": [
    "https://json-schema.org/draft/2019-09/release-notes#definitions"
  ]
}
