{
  "title": "`maxContains` without `contains` is meaningless",
  "description": "`maxContains` can never match if `contains` is absent. Delete it or add a `contains` schema.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2019-09/schema",
        "type": "array"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2019-09/schema",
        "type": "array",
        "maxContains": 1
      },
      "doc": true
    }
  ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: maxContains without contains",
      "description": "maxContains is meaningless without contains.",
      "before": { "type": "array", "maxContains": 1 },
      "after": { "type": "array" }
    },
    {
      "title": "Right: contains with maxContains",
      "description": "Pair maxContains with contains to cap matching elements.",
      "before": { "type": "array", "contains": {"type":"string"}, "maxContains": 3 },
      "after": { "type": "array", "contains": {"type":"string"}, "maxContains": 3 }
    }
  ],
  "autofixable": true,
  "categories": [ "correctness" ],
  "dialects": {
    "2019-09": [ "maxContains", "contains" ],
    "2020-12": [ "maxContains", "contains" ]
  },
  "message": "Remove `maxContains` or add a `contains` keyword.",
  "references": [
    "https://json-schema.org/draft/2020-12/json-schema-validation.html#name-maxcontains"
  ]
}
