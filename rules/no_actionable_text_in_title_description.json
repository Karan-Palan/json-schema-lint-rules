{
  "title": "Use `$comment` for actionable notes, not `title` / `description`",
  "description": "`title` and `description` are user-facing annotations. Action items such as “TODO”, “FIXME”, or implementation instructions belong in `$comment`.",
  "examples": [
    {
      "after": {
        "title": "User object",
        "description": "Represents an application user",
        "$comment": "TODO: refine schema later · FIXME — confirm with backend team"
      },
      "before": {
        "title": "TODO: refine schema later",
        "description": "FIXME — confirm with backend team"
      },
      "doc": true
    }
  ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: Action items in title/description",
      "description": "Move TODO/FIXME etc. to $comment; keep annotations user-facing.",
      "before": { "title": "TODO: refine schema", "description": "FIXME: confirm", "$comment": "" },
      "after": { "title": "User object", "description": "Represents a user", "$comment": "TODO: refine schema · FIXME: confirm" }
    },
    {
      "title": "Right: Clean annotations with $comment",
      "description": "User-facing annotations plus a technical $comment.",
      "before": { "title": "Order", "description": "Purchase order", "$comment": "Internal: v2 soon" },
      "after": { "title": "Order", "description": "Purchase order", "$comment": "Internal: v2 soon" }
    }
  ],
  "autofixable": true,
  "categories": [ "readability", "style" ],
  "dialects": {
    "2019-09": [ "title", "description", "$comment" ],
    "2020-12": [ "title", "description", "$comment" ],
    "draft4": [ "title", "description", "$comment" ],
    "draft6": [ "title", "description", "$comment" ],
    "draft7": [ "title", "description", "$comment" ]
  },
  "message": "Move actionable text to `$comment`.",
  "references": [
    "https://json-schema.org/understanding-json-schema/reference/generic.html#annotations"
  ]
}
