{
  "title": "Omit `contentSchema:{}` (it’s the default)",
  "description": "`contentSchema` set to `{}` (or `true`) imposes no constraints. Leaving it in the schema only adds noise.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string",
        "contentSchema": {}
      },
      "doc": true
    }
  ],
  "autofixable": true,
  "categories": [ "style" ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: contentSchema:{} is redundant",
      "description": "An empty contentSchema adds no constraints.",
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string",
        "contentSchema": {}
      }
    },
    {
      "title": "Right: Explicit content schema",
      "description": "Providing a non-empty contentSchema is valid when paired with a media type.",
      "after": {
        "type": "string",
        "contentMediaType": "application/json",
        "contentSchema": {
          "$id": "https://example.com/sub",
          "type": "object"
        }
      },
      "before": {
        "type": "string",
        "contentMediaType": "application/json",
        "contentSchema": {
          "$id": "https://example.com/sub",
          "type": "object"
        }
      }
    }
  ],
  "dialects": {
    "2019-09": [ "contentSchema" ],
    "2020-12": [ "contentSchema" ],
    "draft7": [ "contentSchema" ]
  },
  "message": "Remove empty `contentSchema` – it adds no validation power.",
  "references": [
    "https://json-schema.org/draft/2020-12/json-schema-validation.html#name-contentschema"
  ]
}
