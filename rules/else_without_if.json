{
  "title": "`else` without `if` is ignored",
  "description": "`else` only has meaning when paired with `if`. If `if` is missing, drop the `else` branch.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "else": {
          "type": "string"
        }
      },
      "doc": true
    }
  ],
  "comprehensiveExamples": [
    {
      "title": "Wrong: else present without if",
      "description": "`else` has no meaning without a sibling `if`.",
      "before": { "$schema": "https://json-schema.org/draft/2020-12/schema", "else": { "type": "string" } },
      "after": { "$schema": "https://json-schema.org/draft/2020-12/schema" }
    },
    {
      "title": "Right: Valid conditional with if/else",
      "description": "An `else` branch is valid when paired with `if`.",
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "if": { "properties": { "premium": { "const": true } } },
        "else": { "not": { "required": ["discount"] } }
      },
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "if": { "properties": { "premium": { "const": true } } },
        "else": { "not": { "required": ["discount"] } }
      }
    }
  ],
  "autofixable": true,
  "categories": [ "correctness" ],
  "dialects": {
    "2019-09": [ "else" ],
    "2020-12": [ "else" ],
    "draft7": [ "else" ]
  },
  "message": "Remove `else` because there is no matching `if`.",
  "references": [
    "https://json-schema.org/draft/2020-12/json-schema-core.html#name-conditionals"
  ]
}
