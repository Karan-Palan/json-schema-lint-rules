{
  "title": "Remove siblings of $ref (draft-07 and older)",
  "description": "In Draft 7 and older dialects, keywords that are siblings of `$ref` are never evaluated.",
  "examples": [
    {
      "after": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "$ref": "#/definitions/INTEGER"
      },
      "before": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "description": "ignored in draft-07",
        "$ref": "#/definitions/INTEGER",
        "type": "integer",
        "minimum": 0
      },
      "doc": true
    },
    {
      "after": {
        "$ref": "#/definitions/person"
      },
      "before": {
        "$ref": "#/definitions/person",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    }
  ],
  "autofixable": true,
  "categories": [ "readability", "style" ],
  "dialects": {
    "draft4": [ "$ref" ],
    "draft6": [ "$ref" ],
    "draft7": [ "$ref" ]
  },
  "message": "Remove sibling keywords – in drafts ≤ 7 only `$ref` is evaluated.",
  "references": [
    "https://json-schema.org/draft-07/draft-handrews-json-schema-01#rfc.section.8.3"
  ]
}
