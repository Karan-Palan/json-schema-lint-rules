{
  "title": "Replace single-value enum with const",
  "description": "Setting `type` alongside `enum` is considered an anti-pattern, as the enumeration already implies its types.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "const": "foo"
      },
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "enum": [ "foo" ]
      },
      "doc": true,
      "tags": [ "basic" ]
    },
    {
      "before": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "enum": [ 42 ]
      }
    }
  ],
  "autofixable": true,
  "categories": [ "correctness", "readability" ],
  "dialects": {
    "2019-09": [ "enum", "const" ],
    "2020-12": [ "enum", "const" ]
  },
  "message": "Drop the redundant `type` keyword (or drop `enum`).",
  "references": [
    "https://json-schema.org/understanding-json-schema/reference/const"
  ]
}
