{
  "title": "Require absolute draft URI in $schema",
  "description": "$schema must be one of the recognised draft URLs (draft-04, draft-06, draft-07, 2019-09, 2020-12). Relative or unrecognised URIs are disallowed.",
  "examples": [
    {
      "after": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "string"
      },
      "before": {
        "$schema": "./schema",
        "type": "string"
      },
      "doc": true
    }
  ],
  "autofix": true,
  "categories": [ "correctness" ],
  "dialects": {
    "2019-09": [ "$schema" ],
    "2020-12": [ "$schema" ],
    "draft4": [ "$schema" ],
    "draft6": [ "$schema" ],
    "draft7": [ "$schema" ]
  },
  "message": "Set $schema to a absolute draft URI.",
  "references": [
    "https://json-schema.org/draft/2020-12/schema",
    "https://json-schema.org/draft/2019-09/schema",
    "https://json-schema.org/draft-07/schema#"
  ]
}
